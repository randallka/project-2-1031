<%- include('../partials/header') %>
<div class="container text-center">
    <h1>All Workouts </h1>
    <% if (!user) { %>
        <p>Login to create your own workouts</p>
    <% } %>
</div>
<div class="container">
    <ul class="list-group col-6 offset-3 ">
        <% workouts.forEach(workout => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="btn btn-outline-primary" href="workouts/<%= workout.id %> " role="button"><%= workout.name %> </a><span class="text-end"><%= workout.createdAt.toLocaleDateString() %> </span>
                <span class="badge bg-primary rounded-pill"><%= workout.difficulty %> </span>
                </li>
        <% }) %>
      </ul>
</div>
