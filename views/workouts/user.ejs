<%- include('../partials/header') %>
<div class="container text-center">
    <h1><%= user.name %> 's Workouts</h1>
</div>
<div class="container px-4 text-center">
    <div class="row gx-5">
      <div class="col">
       <div class="p-3 border bg-light">Created</div>
       <ul class="list-unstyled">
        <% workouts.forEach(workout => { %>
            <li><a href="<%= workout._id %> "><%= workout.name %> </a><%= workout.createdAt.toLocaleDateString() %> 
            <a class="btn btn-outline-primary btn-sm" href="/workouts/<%= workout._id %>/edit" role="button">Edit</a>
            </li>
        <% }) %>
        </ul>
      </div>
      <div class="col">
        <div class="p-3 border bg-light">Liked</div>
        <ul class="list-unstyled">
            <% liked.forEach(workout => { %>
                <li><a href="<%= workout._id %> "><%= workout.name %> </a> 
                </li>
            <% }) %>
            </ul>
      </div>
    </div>
  </div>
<%- include('../partials/footer') %>